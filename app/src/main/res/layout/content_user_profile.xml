<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.in.bookapp.UserProfileActivity"
    tools:showIn="@layout/activity_user_profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME :"
        android:textSize="25dp"

        android:id="@+id/textView_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="152dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserDisplayName"
        android:id="@+id/textView_dpName"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView_name"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact No. :"
        android:id="@+id/textView_contact"
        android:textSize="25dp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView_dpEmail"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:id="@+id/textView_email"
        android:textSize="25dp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9999999999"
        android:textSize="20dp"
        android:id="@+id/textView_dpContact"
        android:layout_alignBottom="@+id/textView_contact"
        android:layout_alignStart="@+id/textView_dpName"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example@bookworm.com"
        android:id="@+id/textView_dpEmail"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView_email"
        android:layout_alignEnd="@+id/textView_dpName"
        android:layout_marginRight="10dp"/>


</RelativeLayout>
